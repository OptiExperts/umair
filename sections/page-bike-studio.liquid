<section class="bike-service-wrapper">
  <div class="bike-servise-main" style="background-image: url('{{ section.settings.background_image | img_url: 'master' }}')">
    <div class="section-header text-center">
      <h1 style="color:{{section.settings.main_title-color}}">{{ section.settings.main_title }}</h1>
    </div>
  </div>
  <div class="text-info">
    <h2>{{ section.settings.sub_title }}</h2>
    <p>{{ section.settings.content }} </p>
  </div>
</section>

<style>
  .bike-servise-main {
    padding: 190px 0;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    position: relative;
    margin-top: -160px;
  }

  .text-center,
  .text-info {
    text-align: center;
  }

  .text-info {
    max-width: 90%;
    margin: 0 auto;
  }

  .text-info p {
    font-size: 18px;
  }
</style>
{% schema %}
  {
    "name": "Bike Service Studio",
    "settings": [
		    {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background Image"
        },
	      {
          "type": "text",
          "id": "main_title",
          "label": "Title"
        },
        {
          "type": "color",
          "id": "main_title-color",
          "label": "Title Color"
        },
        {
          "type": "text",
          "id": "sub_title",
          "label": "Sub Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
	  ],
    "presets": [
        {
        "name": "Bike Service Studio"
        }
    ]
  }
{% endschema %}